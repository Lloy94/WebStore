@model IEnumerable<WebStore.Models.Employee>

 <div class="container">   <h2>Сотрудники</h2>
    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.LastName</td>
                <td>@employee.Name</td>
                <td>@employee.Patronymic</td>
                <td>@employee.Age</td>
                <td><a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">Подробнее</a></td>
            </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-default">Домой</a>
    </p>
</div>